// Left returns the left-most (min) node or nil if tree is empty.
func (tree *$1) Left() *$1Node {
	var parent *$1Node
	current := tree.Root
	for current != nil {
		parent = current
		current = current.Left
	}
	return parent
}

// Right returns the right-most (max) node or nil if tree is empty.
func (tree *$1) Right() *$1Node {
	var parent *$1Node
	current := tree.Root
	for current != nil {
		parent = current
		current = current.Right
	}
	return parent
}

// Floor Finds floor node of the input key, return the floor node or nil if no floor is found.
// Second return parameter is true if floor was found, otherwise false.
//
// Floor node is defined as the largest node that is smaller than or equal to the given node.
// A floor node may not be found, either because the tree is empty, or because
// all nodes in the tree are larger than the given node.
//
// Key should be comparable with <, >, or ==.
// If not, tweak the case statements.
func (tree *$1) Floor(key $2) (floor *$1Node, found bool) {
	found = false
	node := tree.Root
	for node != nil {
		switch {
		case key == node.Key:
			return node, true
		case key < node.Key:
			node = node.Left
		default:
			floor, found = node, true
			node = node.Right
		}
	}
	if found {
		return floor, true
	}
	return nil, false
}

// Ceiling finds ceiling node of the input key, return the ceiling node or nil if no ceiling is found.
// Second return parameter is true if ceiling was found, otherwise false.
//
// Ceiling node is defined as the smallest node that is larger than or equal to the given node.
// A ceiling node may not be found, either because the tree is empty, or because
// all nodes in the tree are smaller than the given node.
//
// Key should be comparable with <, >, or ==.
// If not, tweak the case statements.
func (tree *$1) Ceiling(key $2) (ceiling *$1Node, found bool) {
	found = false
	node := tree.Root
	for node != nil {
		switch {
		case key == node.Key:
			return node, true
		case key < node.Key:
			ceiling, found = node, true
			node = node.Left
		default:
			node = node.Right
		}
	}
	if found {
		return ceiling, true
	}
	return nil, false
}

// Clear removes all nodes from the tree.
